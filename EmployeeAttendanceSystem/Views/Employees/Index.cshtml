
@model IEnumerable<EmployeeAttendanceSystem.Models.Employee>

@{
    ViewData["Title"] = "Employee List";
}

<h2>Employee List</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Employee</a>
</p>

@if (!Model.Any())
{
        <p>No employees found.</p>
}
else
{
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Position</th>
                    <th>Join Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var emp in Model)
            {
                    <tr>
                        <td>@emp.Name</td>
                        <td>@emp.Email</td>
                        <td>@emp.Phone</td>
                        <td>@emp.Position</td>
                        <td>@emp.JoinDate.ToShortDateString()</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@emp.Id">Edit</a> |
                            <a asp-action="Details" asp-route-id="@emp.Id">Details</a> |
                            <a asp-action="Delete" asp-route-id="@emp.Id">Delete</a>
                        </td>
                    </tr>
            }
            </tbody>
        </table>
}


