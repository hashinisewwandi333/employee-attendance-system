@model EmployeeAttendanceSystem.Models.Employee

@{
    ViewData["Title"] = "Delete Employee";
}

<div class="container mt-4">
    <h2>Delete Employee</h2>
    <hr />

    <div class="alert alert-danger">
        <h4>Are you sure you want to delete this employee?</h4>
        <p class="mb-0">This action cannot be undone.</p>
    </div>

    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Name:</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Email:</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3">Position:</dt>
                <dd class="col-sm-9">@Model.Position</dd>

                <dt class="col-sm-3">Join Date:</dt>
                <dd class="col-sm-9">@Model.JoinDate.ToString("yyyy-MM-dd")</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" method="post" class="mt-3">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>