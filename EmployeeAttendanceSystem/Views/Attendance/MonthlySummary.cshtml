@model IEnumerable<EmployeeAttendanceSystem.Controllers.AttendanceController.MonthlySummaryVM>

@{
    ViewData["Title"] = "Monthly Attendance Summary";
}

<div class="container mt-4">
    <h1 class="mb-4">📊 Monthly Attendance Summary</h1>

    <!-- Month/Year Selector -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Select Month</label>
                    <select name="month" class="form-select" onchange="this.form.submit()">
                        @foreach (var month in ViewBag.Months)
                        {
                            <option value="@month.Value" selected="@(month.Value == ViewBag.SelectedMonth.ToString())">
                                @month.Text
                            </option>
                        }
                    </select>
                </div>
                <div class="col-md-4">
                    <label class="form-label">Select Year</label>
                    <select name="year" class="form-select" onchange="this.form.submit()">
                        @foreach (var year in ViewBag.Years)
                        {
                            <option value="@year.Value" selected="@(year.Value == ViewBag.SelectedYear.ToString())">
                                @year.Text
                            </option>
                        }
                    </select>
                </div>
                <div class="col-md-4">
                    <label class="form-label">&nbsp;</label>
                    <div>
                        <button type="submit" class="btn btn-primary">Apply</button>
                        <a href="@Url.Action("MonthlySummary")" class="btn btn-secondary">Current Month</a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Summary Statistics -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-white bg-primary">
                <div class="card-body">
                    <h5 class="card-title">Total Employees</h5>
                    <h2>@ViewBag.TotalEmployees</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-success">
                <div class="card-body">
                    <h5 class="card-title">Present Days</h5>
                    <h2>@ViewBag.TotalPresentDays</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-danger">
                <div class="card-body">
                    <h5 class="card-title">Absent Days</h5>
                    <h2>@ViewBag.TotalAbsentDays</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-warning">
                <div class="card-body">
                    <h5 class="card-title">Average Attendance</h5>
                    <h2>@ViewBag.AverageAttendance%</h2>
                </div>
            </div>
        </div>
    </div>

    <!-- Monthly Summary Table -->
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">@ViewBag.CurrentMonthName - Employee-wise Summary</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Employee</th>
                            <th>Position</th>
                            <th>Total Days</th>
                            <th>Present</th>
                            <th>Absent</th>
                            <th>Late</th>
                            <th>Attendance %</th>
                            <th>Total Hours</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.EmployeeName</td>
                                <td>@item.Position</td>
                                <td>@item.TotalDays</td>
                                <td class="text-success">@item.PresentDays</td>
                                <td class="text-danger">@item.AbsentDays</td>
                                <td class="text-warning">@item.LateDays</td>
                                <td>
                                    <div class="progress">
                                        <div class="progress-bar @(item.AttendancePercentage >= 90 ? "bg-success" : 
                                            item.AttendancePercentage >= 75 ? "bg-warning" : "bg-danger")" 
                                            role="progressbar" style="width: @item.AttendancePercentage%">
                                            @item.AttendancePercentage%
                                        </div>
                                    </div>
                                </td>
                                <td>@item.TotalWorkingHours hrs</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a href="@Url.Action("Summary")" class="btn btn-outline-primary">
            ← Back to Dashboard
        </a>
    </div>
</div>

<style>
    .progress {
        height: 20px;
    }
    .progress-bar {
        font-size: 12px;
        line-height: 20px;
    }
</style>