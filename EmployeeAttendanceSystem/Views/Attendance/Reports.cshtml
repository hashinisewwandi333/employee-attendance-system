@model IEnumerable<EmployeeAttendanceSystem.Models.Attendance>
@{
    ViewData["Title"] = "Attendance Reports";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-chart-bar"></i> Attendance Reports & Analytics
                    </h3>
                </div>
                <div class="card-body">

                    <!-- Filter Form -->
                    <form method="get" class="row g-3 mb-4 p-3 border rounded bg-light">
                        <div class="col-md-4">
                            <label class="form-label">Employee</label>
                            <select name="employeeId" class="form-select">
                                @foreach (var item in ViewBag.EmployeeList)
                                {
                                        <option value="@item.Value" selected="@(item.Value == ViewBag.EmployeeId?.ToString())">
                                        @item.Text
                                        </option>
                                }
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Month</label>
                            <select name="month" class="form-select">
                                @foreach (var item in ViewBag.Months)
                                {
                                        <option value="@item.Value" selected="@(item.Value == ViewBag.SelectedMonth.ToString())">
                                        @item.Text
                                        </option>
                                }
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Year</label>
                            <select name="year" class="form-select">
                                @foreach (var item in ViewBag.Years)
                                {
                                        <option value="@item.Value" selected="@(item.Value == ViewBag.SelectedYear.ToString())">
                                        @item.Text
                                        </option>
                                }
                            </select>
                        </div>
                        <div class="col-md-2 d-flex align-items-end">
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="fas fa-filter"></i> Filter
                            </button>
                        </div>
                    </form>

                    <!-- Summary Cards -->
                    <div class="row mb-4">
                        <div class="col-md-3">
                            <div class="card border-success">
                                <div class="card-body text-center">
                                    <h5 class="card-title">Total Records</h5>
                                    <h2 class="text-success">@ViewBag.TotalRecords</h2>
                                    <p class="text-muted">For @ViewBag.SelectedEmployeeName</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card border-primary">
                                <div class="card-body text-center">
                                    <h5 class="card-title">Present</h5>
                                    <h2 class="text-primary">@ViewBag.PresentCount</h2>
                                    <p class="text-muted">(@ViewBag.EarlyCount Early + @ViewBag.LateCount Late)</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card border-danger">
                                <div class="card-body text-center">
                                    <h5 class="card-title">Absent</h5>
                                    <h2 class="text-danger">@ViewBag.AbsentCount</h2>
                                    <p class="text-muted">@(ViewBag.TotalDaysInMonth - ViewBag.PresentCount) days</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card border-warning">
                                <div class="card-body text-center">
                                    <h5 class="card-title">Attendance Rate</h5>
                                    <h2 class="text-warning">@ViewBag.AttendanceRate%</h2>
                                    <p class="text-muted">For @DateTime.Now.ToString("MMMM yyyy")</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Export Buttons -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <div class="d-flex justify-content-end gap-2">
                                <a href="@Url.Action("ExportReport", new { format = "pdf", employeeId = ViewBag.EmployeeId, month = ViewBag.SelectedMonth, year = ViewBag.SelectedYear })" 
                                   class="btn btn-danger">
                                    <i class="fas fa-file-pdf"></i> Export as PDF
                                </a>
                                <a href="@Url.Action("ExportReport", new { format = "excel", employeeId = ViewBag.EmployeeId, month = ViewBag.SelectedMonth, year = ViewBag.SelectedYear })" 
                                   class="btn btn-success">
                                    <i class="fas fa-file-excel"></i> Export as Excel
                                </a>
                            </div>
                        </div>
                    </div>

                    <!-- Detailed Report Table -->
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Date</th>
                                    <th>Employee</th>
                                    <th>Check-In</th>
                                    <th>Check-Out</th>
                                    <th>Status</th>
                                    <th>Hours Worked</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    foreach (var item in Model)
                                    {
                                                <tr>
                                                    <td>@item.Date.ToString("yyyy-MM-dd")</td>
                                                    <td>@item.Employee?.Name</td>
                                                    <td>@item.CheckIn.ToString("hh:mm tt")</td>
                                                    <td>@(item.CheckOut?.ToString("hh:mm tt") ?? "N/A")</td>
                                                    <td>
                                                @if (item.Status == "Present")
                                                {
                                                                <span class="badge bg-success">@item.Status</span>
                                                }
                                                else if (item.Status == "Late")
                                                {
                                                                <span class="badge bg-warning">@item.Status</span>
                                                }
                                                else if (item.Status == "Absent")
                                                {
                                                                <span class="badge bg-danger">@item.Status</span>
                                                }
                                                else
                                                {
                                                                <span class="badge bg-secondary">@item.Status</span>
                                                }
                                                    </td>
                                                    <td>
                                                @if (item.CheckOut.HasValue)
                                                {
                                                    var hours = (item.CheckOut.Value - item.CheckIn).TotalHours;
                                                                <span class="badge bg-info">@hours.ToString("0.00") hrs</span>
                                                }
                                                else
                                                {
                                                                <span class="text-muted">N/A</span>
                                                }
                                                    </td>
                                                </tr>
                                    }
                                }
                                else
                                {
                                        <tr>
                                            <td colspan="6" class="text-center text-muted py-4">
                                                <i class="fas fa-info-circle fa-2x mb-2"></i>
                                                <br />
                                                No attendance records found for the selected period.
                                            </td>
                                        </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- Statistics Section -->
                    <div class="row mt-4">
                        <div class="col-md-12">
                            <div class="card">
                                <div class="card-header">
                                    <h5 class="mb-0">Monthly Statistics</h5>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <h6>Employee Distribution</h6>
                                            <p>Total Employees: <strong>@ViewBag.TotalEmployees</strong></p>
                                            <p>Records This Month: <strong>@ViewBag.TotalRecords</strong></p>
                                        </div>
                                        <div class="col-md-6">
                                            <h6>Attendance Summary</h6>
                                            <p>Working Days: <strong>@ViewBag.TotalDaysInMonth</strong></p>
                                            <p>Attendance Rate: <strong>@ViewBag.AttendanceRate%</strong></p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="card-footer">
                    <div class="text-muted small">
                        Report generated on @DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss") | 
                        Period: @DateTime.Parse($"1/{ViewBag.SelectedMonth}/{ViewBag.SelectedYear}").ToString("MMMM yyyy")
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">